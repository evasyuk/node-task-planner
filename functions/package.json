{
  "name": "functions",
  "scripts": {
    "lint": "tslint --project tsconfig.json",
    "build": "tsc",
    "serve": "npm run build && . ./scripts/get.db.info.sh && firebase emulators:start --only functions",
    "shell": "npm run build && . ./scripts/get.db.info.sh && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "&& . ./scripts/get.db.info.sh firebase deploy --only functions",
    "logs": "firebase functions:log",
    "test": "ava"
  },
  "engines": {
    "node": "10"
  },
  "main": "lib/index.js",
  "dependencies": {
    "axios": "^0.20.0",
    "express": "^4.17.1",
    "firebase-admin": "^8.10.0",
    "firebase-functions": "^3.6.1",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@ava/typescript": "^1.1.1",
    "ava": "^3.12.1",
    "firebase-functions-test": "^0.2.0",
    "ts-node": "^9.0.0",
    "tslint": "^5.12.0",
    "typescript": "^3.8.0"
  },
  "ava": {
    "files": [
      "src/**/*.test.ts",
      "src/**/*.test.js"
    ],
    "require": [
      "ts-node/register"
    ],
    "typescript": {
      "rewritePaths": {
        "src/": "lib/"
      }
    }
  },
  "private": true
}
